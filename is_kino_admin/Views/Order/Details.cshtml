@{
}


@model is_kino_admin.Models.Order

<div class="container">

    <p>
        <a class="btn btn-warning">@Model.User.Email - @Model.User.FirstName @Model.User.LastName</a>
    </p>

    @for (int i = 0; i < Model.TicketInOrders.Count(); i++)
    {
        var item = Model.TicketInOrders.ElementAt(i);

        if (i % 3 == 0)
        {
            @:<div class="row">
            }

            <div class="col-md-3 m-4">
                <div class="card" style="width: 18rem; height: 30rem;">
                   

                    <div class="card-body">
                        @*<h3 class="card-title">@item.OrderedTicket.Id</h3>*@
                        <p class="card-text">@item.OrderedTicket.Date</p>


                        <h6>Price: $@item.OrderedTicket.Price</h6>
                        <h6>Quantity: @item.Quantity</h6>
                        <h6>Total: $@(item.OrderedTicket.Price * item.Quantity)</h6>
                    </div>

                </div>
            </div>


            if (i % 3 == 2)
            {
            @:</div>
        }
    }

</div>